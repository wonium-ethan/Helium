<resources>
    <declare-styleable name="ItemView">
        <!--左边图标上边距-->
        <!--左边图标的外边距-->
        <attr name="leftIcon" format="reference"/>
        <attr name="leftIconBackground" format="reference"/>
        <attr name="leftIconMarginTop" format="dimension"/>
        <attr name="leftIconMarginLeft" format="dimension"/>
        <attr name="leftIconMarginRight" format="dimension"/>
        <attr name="leftIconMarginBottom" format="dimension"/>
        <!--左边图标的内边距-->
        <attr name="leftIconPaddingTop" format="dimension"/>
        <attr name="leftIconPaddingBottom" format="dimension"/>
        <attr name="leftIconPaddingRight" format="dimension"/>
        <attr name="leftIconPaddingLeft" format="dimension"/>


        <!--左边主内容的外边距-->

        <attr name="leftTextMarginTop" format="dimension"/>
        <attr name="leftTextMarginLeft" format="dimension"/>
        <attr name="leftTextMarginRight" format="dimension"/>
        <attr name="leftTextMarginBottom" format="dimension"/>
        <!--左边主内容的内边距-->
        <attr name="leftTextPaddingTop" format="dimension"/>
        <attr name="leftTextPaddingBottom" format="dimension"/>
        <attr name="leftTextPaddingRight" format="dimension"/>
        <attr name="leftTextPaddingLeft" format="dimension"/>
        <attr name="leftTextLine" format="integer"/>
        <attr name="leftTextColor" format="reference|color"/>
        <attr name="leftTextSize" format="dimension"/>
        <attr name="leftTextBackground" format="reference|color"/>
        <attr name="leftText" format="reference|string"/>

        <!--左边次内容的外边距-->
        <attr name="leftSubTextMarginTop" format="dimension"/>
        <attr name="leftSubTextMarginLeft" format="dimension"/>
        <attr name="leftSubTextMarginRight" format="dimension"/>
        <attr name="leftSubTextMarginBottom" format="dimension"/>
        <!--左边次内容的内边距-->
        <attr name="leftSubTextPaddingTop" format="dimension"/>
        <attr name="leftSubTextPaddingBottom" format="dimension"/>
        <attr name="leftSubTextPaddingRight" format="dimension"/>
        <attr name="leftSubTextPaddingLeft" format="dimension"/>
        <attr name="leftSubTextLine" format="integer"/>
        <attr name="leftSubTextColor" format="reference|color"/>
        <attr name="leftSubTextSize" format="dimension"/>
        <attr name="leftSubText" format="reference|string"/>
        <attr name="leftSubTextBackground" format="reference|color"/>
        <attr name="leftSubTextVisibility" format="enum">
            <enum name="visible" value="0" />
            <!-- Not displayed, but taken into account during layout (space is left for it). -->
            <enum name="invisible" value="1" />
            <!-- Completely hidden, as if the view had not been added. -->
            <enum name="gone" value="2" />
        </attr>


        <!--右边主内容的外边距-->
        <attr name="rightText" format="reference|string"/>
        <attr name="rightTextMarginTop" format="dimension"/>
        <attr name="rightTextMarginLeft" format="dimension"/>
        <attr name="rightTextMarginRight" format="dimension"/>
        <attr name="rightTextMarginBottom" format="dimension"/>
        <!--右边主内容的内边距-->
        <attr name="rightTextPaddingTop" format="dimension"/>
        <attr name="rightTextPaddingBottom" format="dimension"/>
        <attr name="rightTextPaddingRight" format="dimension"/>
        <attr name="rightTextPaddingLeft" format="dimension"/>
        <attr name="rightTextLine" format="integer"/>
        <attr name="rightTextColor" format="reference|color"/>
        <attr name="rightTextSize" format="dimension"/>
        <attr name="rightTextBackground" format="reference|color"/>


        <!--右边次内容的外边距-->
        <attr name="rightSubText" format="reference|string"/>
        <attr name="rightSubTextMarginTop" format="dimension"/>
        <attr name="rightSubTextMarginLeft" format="dimension"/>
        <attr name="rightSubTextMarginRight" format="dimension"/>
        <attr name="rightSubTextMarginBottom" format="dimension"/>
        <!--右边次内容的内边rightsub-->
        <attr name="rightSubTextPaddingTop" format="dimension"/>
        <attr name="rightSubTextPaddingBottom" format="dimension"/>
        <attr name="rightSubTextPaddingRight" format="dimension"/>
        <attr name="rightSubTextPaddingLeft" format="dimension"/>
        <attr name="rightSubTextLine" format="integer"/>
        <attr name="rightSubTextColor" format="reference|color"/>
        <attr name="rightSubTextSize" format="dimension"/>
        <attr name="rightSubTextBackground" format="reference|color"/>
        <attr name="rightSubTextVisible" format="enum">

            <enum name="visible" value="0" />
            <!-- Not displayed, but taken into account during layout (space is left for it). -->
            <enum name="invisible" value="1" />
            <!-- Completely hidden, as if the view had not been added. -->
            <enum name="gone" value="2" />

        </attr>
        <!--右边未读消息的外边距-->
        <attr name="rightUnreadMessage" format="string|reference"/>
        <attr name="rightUnreadMessageMarginLeft" format="dimension"/>
        <attr name="rightUnreadMessageMarginTop" format="dimension"/>
        <attr name="rightUnreadMessageMarginRight" format="dimension"/>
        <attr name="rightUnreadMessageMarginBottom" format="dimension"/>
        <!--右边未读消息的内边距-->
        <attr name="rightUnreadMessagePaddingTop" format="dimension"/>
        <attr name="rightUnreadMessagePaddingBottom" format="dimension"/>
        <attr name="rightUnreadMessagePaddingLeft" format="dimension"/>
        <attr name="rightUnreadMessagePaddingRight" format="dimension"/>

        <attr name="rightUnreadMessageTextColor" format="reference|color"/>
        <attr name="rightUnreadMessageTextSize" format="dimension"/>
        <attr name="rightUnreadMessageTextBackground" format="reference|color"/>


        <!--右边图标的外边距-->
        <attr name="rightIcon" format="reference"/>
        <attr name="rightIconBackground" format="reference|color"/>
        <attr name="rightIconMarginTop" format="dimension"/>
        <attr name="rightIconMarginBottom" format="dimension"/>
        <attr name="rightIconMarginLeft" format="dimension"/>
        <attr name="rightIconMarginRight" format="dimension"/>
        <!--右边图标的内边距-->
        <attr name="rightIconPaddingTop" format="dimension"/>
        <attr name="rightIconPaddingBottom" format="dimension"/>
        <attr name="rightIconPaddingLeft" format="dimension"/>
        <attr name="rightIconPaddingRight" format="dimension"/>

        <!--bottomLine-->
        <attr name="bottomLineBackground" format="reference|color"/>
        <attr name="bottomLineMarginTop" format="dimension"/>
        <attr name="bottomLineMarginBottom" format="dimension"/>
        <attr name="bottomLineMarginLeft" format="dimension"/>
        <attr name="bottomLineMarginRight" format="dimension"/>
        <attr name="bottomLinePaddingTop" format="dimension"/>
        <attr name="bottomLinePaddingBottom" format="dimension"/>
        <attr name="bottomLinePaddingLeft" format="dimension"/>
        <attr name="bottomLinePaddingRight" format="dimension"/>
        <attr name="bottomLineVisible" format="enum">
            <enum name="visible" value="0" />
            <!-- Not displayed, but taken into account during layout (space is left for it). -->
            <enum name="invisible" value="1" />
            <!-- Completely hidden, as if the view had not been added. -->
            <enum name="gone" value="2" />
        </attr>
    </declare-styleable>
</resources>